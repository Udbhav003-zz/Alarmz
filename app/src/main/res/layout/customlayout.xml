<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?customBackground">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?darkBack"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        android:layout_margin="10dp"
        android:id="@+id/card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?darkBack"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textSize="32sp"
                    android:textColor="?textBack"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/timeTextview"/>

                <Switch
                    android:id="@+id/sw"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:drawableLeft="@drawable/tone"
                android:padding="10dp"
                android:textColor="?textBack"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/toneSelect"
                android:layout_marginLeft="10dp"  />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:textSize="16sp"
                    android:id="@+id/label"
                    android:textColor="?textBack"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:drawableLeft="@drawable/label" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/play"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/ic_volume_up_black_24dp" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/delete"
                android:textColor="@android:color/holo_red_light"
                android:text="  Delete"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/delete"
                android:padding="10dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>